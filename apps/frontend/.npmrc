enable-pre-post-scripts=true

# Electron 国内镜像源
electron_mirror=https://npmmirror.com/mirrors/electron/
electron_custom_dir="{{ version }}"

# Hoist electron and sentry packages to top-level node_modules for compatibility
# This fixes the module resolution issue where require('electron') returns
# the binary path instead of the API when using pnpm
public-hoist-pattern[]=electron
public-hoist-pattern[]=@sentry/*
