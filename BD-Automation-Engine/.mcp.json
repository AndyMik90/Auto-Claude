{
  "mcpServers": {
    "n8n": {
      "command": "npx",
      "args": ["-y", "n8n-mcp@latest"],
      "timeout": 300000,
      "env": {
        "MCP_MODE": "stdio",
        "N8N_API_URL": "${N8N_API_URL}",
        "N8N_API_KEY": "${N8N_API_KEY}"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "timeout": 300000,
      "env": {
        "OPENAPI_MCP_HEADERS": "${OPENAPI_MCP_HEADERS}",
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      }
    },
    "notion-remote": {
      "url": "https://mcp.notion.com/mcp",
      "type": "remote",
      "timeout": 300000,
      "description": "Hosted Notion MCP - OAuth-based, no API key needed"
    },
    "apify": {
      "command": "npx",
      "args": ["-y", "@apify/actors-mcp-server"],
      "timeout": 300000,
      "env": {
        "APIFY_TOKEN": "${APIFY_API_TOKEN}"
      }
    },
    "mapify": {
      "command": "node",
      "args": ["mcp/mapify-mcp-server/build/index.js"],
      "timeout": 300000,
      "env": {
        "MAPIFY_API_KEY": "${MAPIFY_API_KEY}"
      }
    }
  }
}
