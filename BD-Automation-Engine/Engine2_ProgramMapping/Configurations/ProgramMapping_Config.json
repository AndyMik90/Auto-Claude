  "programKeywords": {
    "_comment": "Program-specific keyword signals",

    "AF DCGS": ["dcgs", "distributed common ground", "isr", "480th", "dgs-1", "dgs-2", "nasic", "pacaf", "beale", "langley", "intelligence surveillance reconnaissance"],
    "Army DCGS-A": ["dcgs-a", "inscom", "g2", "army intelligence", "army dcgs"],
    "Navy DCGS-N": ["dcgs-n", "n2", "naval intelligence", "navy dcgs"],
    "NSA Programs": ["sigint", "nsa", "uscybercom", "cnss", "fort meade", "signals intelligence"],
    "DIA Programs": ["dia", "humint", "j2", "defense intelligence"],
    "NGA Programs": ["geoint", "nga", "imagery", "geospatial"],
    "NRO Programs": ["nro", "reconnaissance", "satellite"],
    "Space Force": ["ussf", "spacecom", "space force", "space delta"]
  },

  "primeContractorMapping": {
    "_comment": "Prime contractor identification for DCGS portfolio",

    "BAE Systems": {
      "aliases": ["BAE", "BAE Systems Inc"],
      "role": "AF DCGS Prime",
      "programs": ["AF DCGS"]
    },
    "GDIT": {
      "aliases": ["General Dynamics IT", "General Dynamics Information Technology", "GD IT"],
      "role": "Multiple",
      "programs": ["Army DCGS-A (Prime)", "Navy DCGS-N (Prime)", "AF DCGS (Sub)"]
    },
    "Leidos": {
      "aliases": ["LDOS", "Leidos Holdings"],
      "role": "Competitor/Partner",
      "programs": ["DIA", "NSA"]
    },
    "SAIC": {
      "aliases": ["Science Applications", "SAIC Inc"],
      "role": "Competitor",
      "programs": ["Army programs"]
    },
    "Northrop Grumman": {
      "aliases": ["NGC", "NGIS", "Northrop"],
      "role": "Teaming partner",
      "programs": ["NRO", "Space Force"]
    },
    "Booz Allen Hamilton": {
      "aliases": ["BAH", "Booz Allen"],
      "role": "Competitor",
      "programs": ["IC programs"]
    },
    "Peraton": {
      "aliases": ["Peraton Inc"],
      "role": "Competitor",
      "programs": ["NRO", "NGA"]
    },
    "CACI": {
      "aliases": ["CACI International"],
      "role": "Competitor",
      "programs": ["Army MI"]
    },
    "ManTech": {
      "aliases": ["ManTech International"],
      "role": "Competitor",
      "programs": ["NSA", "FBI"]
    }
  },

  "clearanceMapping": {
    "_comment": "Clearance requirements by program type",

    "TS/SCI w/ Poly": {
      "aliases": ["TS/SCI with Polygraph", "TS/SCI w/ CI Poly", "TS/SCI w/ Full Scope"],
      "programs": ["NSA", "CIA", "NRO"],
      "bd_boost": 35
    },
    "TS/SCI": {
      "aliases": ["Top Secret SCI", "TS SCI"],
      "programs": ["DIA", "NGA", "AF ISR", "DCGS"],
      "bd_boost": 25
    },
    "Top Secret": {
      "aliases": ["TS", "Top Secret Clearance"],
      "programs": ["DoD general"],
      "bd_boost": 15
    },
    "Secret": {
      "aliases": ["DOD Secret", "Secret Clearance"],
      "programs": ["General Defense"],
      "bd_boost": 5
    }
  },

  "scoring": {
    "_comment": "Multi-signal scoring weights from program-mapping-skill",

    "programNameInTitle": 50,
    "programNameInDescription": 20,
    "acronymMatch": 40,
    "locationMatchExact": 20,
    "locationMatchRegion": 10,
    "technologyKeyword": 15,
    "roleTypeMatch": 10,
    "clearanceAlignment": 5,
    "clearanceMismatch": -20,
    "dcgsSpecificKeyword": 10
  },

  "thresholds": {
    "_comment": "Confidence thresholds for match types",

    "direct": {
      "min": 0.70,
      "action": "auto-map"
    },
    "fuzzy": {
      "min": 0.50,
      "max": 0.69,
      "action": "flag-for-review"
    },
    "inferred": {
      "max": 0.49,
      "action": "manual-review-required"
    }
  },

  "bdPriorityTiers": {
    "_comment": "BD Priority Score to Tier mapping",

    "hot": {
      "min": 80,
      "max": 100,
      "color": "red",
      "emoji": "fire",
      "action": "immediate-outreach"
    },
    "warm": {
      "min": 50,
      "max": 79,
      "color": "yellow",
      "emoji": "yellow_circle",
      "action": "weekly-follow-up"
    },
    "cold": {
      "min": 0,
      "max": 49,
      "color": "blue",
      "emoji": "snowflake",
      "action": "pipeline-tracking"
    }
  },

  "semanticSearch": {
    "enabled": true,
    "model": "text-embedding-ada-002",
    "topK": 3,
    "minSimilarity": 0.7,
    "embeddingsFile": "data/program_embeddings.json"
  },

  "statusFlow": {
    "_comment": "Job processing status transitions",
    "stages": ["raw_import", "pending_enrichment", "enriching", "enriched", "validated", "error"],
    "transitions": {
      "raw_import": ["pending_enrichment"],
      "pending_enrichment": ["enriching"],
      "enriching": ["enriched", "error"],
      "enriched": ["validated", "error"],
      "error": ["pending_enrichment"]
    }
  },

  "output": {
    "enrichedJobsPath": "Engine2_ProgramMapping/data/Enriched_Jobs.json",
    "mappingLogPath": "outputs/Logs/program_mapping.log",
    "unmatchedJobsPath": "Engine2_ProgramMapping/data/Unmatched_Jobs.json"
  }
}
